---
import { titleToPinyin } from "../utils/utils";
const { title, date, wordNum, description } = Astro.props;
---

<a
  class="post-card"
  href={`/blog/${titleToPinyin(title)}/`}
  data-astro-prefetch
>
  <div class="card-top">
    <div class="card-title" title={title}>{title}</div>
    <div class="word-num">{wordNum}字</div>
  </div>
  <div class="card-center" title={description}>
    {description}
  </div>
  <div class="card-bottom">
    <div class="card-date">{date}</div>
  </div>
</a>

<style>
  a {
    text-decoration: none; /* 去除下划线 */
    color: inherit; /* 继承父元素的颜色 */
    background: rgba(255, 255, 255, 0.2);
  }
  .post-card {
    display: flex;
    flex-direction: column;
    gap: 0.7rem; /* 行间距 */
    align-items: center;
    width: auto;
    height: 8rem;
    margin: 20px 20px 10px 20px;
    border: 1px solid rgba(0, 0, 0, 0.2); /* 添加黑色的边框，宽度为 2px */
    border-radius: 10px;
    padding: 10px 25px; /* 给容器添加内边距 */
    cursor: pointer; /* 悬浮时显示手指 */
    transition:
      box-shadow 0.15s ease-out,
      background-color 0.15s ease-out;
  }

  .post-card > * {
    align-self: flex-start;
    white-space: nowrap;
    overflow: hidden; /* 超出隐藏 */
    text-overflow: ellipsis; /* 超出显示省略号 */
    width: 100%; /* 超出显示省略必须有明确的宽度 */
  }

  .post-card:hover {
    /* x 偏移量 | y 偏移量 | 阴影模糊半径 | 阴影扩散半径 | 阴影颜色 */
    box-shadow: 0 0.3rem 0.7rem rgba(0, 0, 0, 0.1);
    background: var(--post-card-h-color);
  }

  .card-top {
    align-self: flex-start;
    display: flex;
    align-items: flex-end; /* 贴着交叉轴底部（使字在同一水平线上） */
  }

  .card-top > * {
    margin-right: 0.6rem;
  }

  .card-title {
    flex: 0 1 auto; /* 只缩不伸，宽度自动 */
    font-size: 1.2rem;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .word-num {
    flex: 0; /* 保持宽度 */
  }

  @media (max-width: 768px) {
    .post-card {
      gap: 0.3rem;
      height: 6.5rem;
      margin: 4px 0;
      border-radius: 5px;
    }
    .card-top {
      margin-bottom: -5px;
    }
  }
</style>
