---
import { Image } from "astro:assets";
import friends from "../../public/assets/friends.json";
import BaseLayout from "../layouts/BaseLayout.astro";
friends.sort(() => Math.random() - 0.5);
---

<BaseLayout
  description="本页面供奉着我的朋友们(不是"
  keywords="friends,links"
  title="友链"
  canonical=`${import.meta.env.SITE}friend-links/`
>
  <div id="cards">
    {
      friends.map(({ name, des, icon, url }) => (
        <a class="card" href={url}>
          <div class="left">
            <Image src={icon} alt={name + " avatar"} width="96" height="96" />
          </div>
          <div class="right">
            <p class="name">{name}</p>
            <p class="description">{des}</p>
          </div>
        </a>
      ))
    }
  </div>

  <div id="info">
    <p>前辈！和我交换友链吧！</p>
    <p>
      提供你的 <strong>名字</strong>、<strong>描述</strong>、<strong
        >头像</strong
      >、<strong>地址</strong>， 或者按照如下格式发送到
      <a href="mailto:abc1514671906@163.com" target="_blank">这里！</a>
    </p>
    <pre>
<code>
"name": "田所浩二",
"des": "逸一时误一世。",
"icon": "https://icon.shimo/114514",
"url": "https://tadokorokouji.homo"
</code>
    </pre>
  </div>
</BaseLayout>

<style>
  #info {
    padding: 20px 50px;
  }
  #cards {
    display: grid;
    grid-template-columns: repeat(2, 350px); /* 每张卡片固定宽度 */
    justify-content: center; /* 整体网格居中 */
    gap: 10px;
  }
  @media (max-width: 600px) {
    #cards {
      grid-template-columns: 1fr; /* 在小屏幕上改为单列 */
      width: 100%;
    }
  }
  .card .left img {
    width: 96px;
    height: 96px;
    border-radius: 50%;
    margin-top: 0;
    margin-bottom: 0;
  }

  .card {
    text-decoration: none; /* 去除下划线 */
    color: inherit; /* 继承父元素的颜色 */
    margin: 0 1rem 1.5rem 1rem;
    display: flex;
    align-items: center;
    justify-content: space-around;
    height: 8rem;
    width: auto;
    background-color: white;
    border: 1px solid #f4f4f5; /* 添加黑色的边框，宽度为 2px */
    border-radius: 1rem;
    padding: 6%;
    cursor: pointer; /* 悬浮时显示手指 */
    transition:
      box-shadow 0.15s ease-out,
      background-color 0.15s ease-out;
  }

  @media (max-width: 320px) {
    .left {
      display: none;
    }
  }

  .main:hover {
    /* x 偏移量 | y 偏移量 | 阴影模糊半径 | 阴影扩散半径 | 阴影颜色 */
    box-shadow: 0 0.3rem 0.7rem rgba(0, 0, 0, 0.1);
    /* background: rgba(244, 243, 246, 0.4); */
  }

  .left {
    flex: 0 0 100px
  }
  .right {
    flex: 1;
  }

  .name {
    font-size: 1.2rem;
    white-space: nowrap;
    overflow: hidden; /* 超出隐藏 */
    text-overflow: ellipsis; /* 超出显示省略号 */
    width: 100%; /* 超出显示省略必须有明确的宽度 */
  }

  .description {
    font-weight: lighter;
    font-size: 1rem;
    color: #808080;
    white-space: nowrap;
    overflow: hidden; /* 超出隐藏 */
    text-overflow: ellipsis; /* 超出显示省略号 */
    width: 100%; /* 超出显示省略必须有明确的宽度 */
  }
  
</style>
